<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp">

    <TextView
            android:text="KILLL ME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_chat_to_item"
            android:background="@drawable/message_left_right"
            android:textColor="@android:color/white"
            android:maxWidth="240dp"
            android:padding="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_chat_to_row" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imageView_chat_to_row"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>