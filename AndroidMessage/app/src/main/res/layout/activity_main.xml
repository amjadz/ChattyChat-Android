<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:background="@drawable/rounded_text_registered_login" android:textColor="@android:color/black"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:paddingLeft="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Username"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"

            android:id="@+id/email"
            android:background="@drawable/rounded_text_registered_login" android:textColor="@android:color/black"
            android:hint="Email"
            app:layout_constraintEnd_toEndOf="@+id/name" app:layout_constraintStart_toStartOf="@+id/name"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/password"
            android:textColor="@android:color/black" android:background="@drawable/rounded_text_registered_login"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/email"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintEnd_toEndOf="@+id/email" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Register "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button" android:layout_marginTop="12dp"
            android:textColor="@android:color/white" app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password"
            android:background="@drawable/rounded_button" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Already Have An Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/register_button"
            app:layout_constraintEnd_toEndOf="@+id/register_button" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="Add your Image"
            android:layout_width="139dp"
            android:layout_height="134dp"
            android:background="@drawable/round_image"
            android:textColor="@android:color/white"
            android:id="@+id/add_image" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="147dp"
            android:id="@+id/photo_image"
            android:layout_height="137dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/name"/>
</android.support.constraint.ConstraintLayout>